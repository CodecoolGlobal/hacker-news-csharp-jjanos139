@model IEnumerable<Codecool.HackerNewsClient.Models.TopNews>
@{
    ViewData["Title"] = "Top News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>
    Top News
</h1>
@foreach (var item in Model)
{
    <div class="jumbotron">
        <div class="col-md-4">
            <table>
                <thead>
                <tr>
                    <th class="news-title">Title</th>
                    <th>Author</th>
                    <th>Published</th>
                </tr>
                </thead>
                <tbody>

                <tr>
                    <td class="news-title">
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Time_Ago)
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
}




