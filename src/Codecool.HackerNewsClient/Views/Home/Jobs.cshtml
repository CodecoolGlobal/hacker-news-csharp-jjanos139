@model IEnumerable<Codecool.HackerNewsClient.Models.Jobs>
@{
    ViewData["Title"] = "Jobs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <a href="@Url.Action("Jobs", new { page = (int)ViewData["page"] - 1})" class="btn btn-primary @( (int) ViewData["page"] == 1 ? "disabled" : "")">Previous</a>
    <a href="@Url.Action("Jobs", new { page = (int)ViewData["page"] + 1})" class="btn btn-primary @( (int) ViewData["page"] == 1 ? "disabled" : "")">Next</a>
</div>
<br />
@foreach (var item in Model)
{
    <div class="jumbotron">
        <div>
            <table>
                <tbody>
                    <tr>
                        <td>
                            <strong>Title:</strong><a href="@Html.DisplayFor(modelItem => item.URL)"> @Html.DisplayFor(modelItem => item.Title)</a>
                        </td>
                    </tr>
                </tbody>
            </table>
            <table>
                <tbody>
                    <tr>
                        <td>
                            <strong>Published:</strong> @Html.DisplayFor(modelItem => item.Time_Ago)
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
}


